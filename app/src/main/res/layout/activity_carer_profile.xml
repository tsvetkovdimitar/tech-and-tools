<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarerProfileActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/carer_profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/carer_profile_toolbar"
        android:id="@+id/userEmail"
        android:textSize="25sp"
        android:gravity="center"
        android:text="TextView"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Child name"
        android:id="@+id/edt_child_name"
        android:layout_below="@id/userEmail"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Parent email"
        android:ems="10"
        android:id="@+id/edt_parent_email"
        android:layout_below="@id/edt_child_name"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_child"
        android:layout_below="@id/edt_parent_email"
        android:text="Add"/>

    <FrameLayout
        android:id="@+id/carer_frame_layout"
        android:layout_below="@+id/btn_add_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_children">
        </ListView>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/carer_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:menu="@menu/carer_bottom_menu" />


</RelativeLayout>